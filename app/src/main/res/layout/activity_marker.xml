<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Name (50 max)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/description_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name_edit_text"
        android:layout_below="@+id/name_edit_text"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:hint="Description (280 max)"
        android:inputType="textMultiLine" />


    <TextView
        android:id="@+id/latitude_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description_edit_text"
        android:layout_below="@+id/description_edit_text"
        android:layout_marginTop="75dp"
        android:text="Latitude Coordinate" />

    <TextView
        android:id="@+id/longitude_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/latitude_text_view"
        android:layout_alignBottom="@+id/latitude_text_view"
        android:layout_alignEnd="@+id/ic_finish_task_image_button"
        android:text="Longitude Coordinate" />


    <ImageButton
        android:id="@+id/ic_finish_task_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="36dp"
        app:srcCompat="@drawable/ic_finish_task" />

</RelativeLayout>